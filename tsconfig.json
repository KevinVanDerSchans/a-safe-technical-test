{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@pages/*": ["pages/*"],
      "@entities/*": ["src/domain/entities/*"],
      "@config/*": ["src/infrastructure/config/*"],
      "@redux/*": ["src/infrastructure/redux/*"],
      "@layouts/*": ["src/presentation/layouts/*"],
      "@sharedHooks/*": ["src/shared/hooks/*"],
      "@sharedComponents/*": ["src/shared/components/*"],
      "@sharedTypes/*": ["src/shared/types/*"],
      "@constants/*": ["src/shared/constants/*"],
      "@context/*": ["src/shared/context/*"],
      "@errors/*": ["src/shared/errors/*"],
      "@utils/*": ["src/shared/utils/*"],
      "@svgs/*": ["public/svgs/*"],
      "@styles/*": ["styles/*"],

      "@users/*": ["src/presentation/features/users/*"],
      "@posts/*": ["src/presentation/features/posts/*"],
      "@customers/*": ["src/presentation/features/customers/*"],
      "@auth/*": ["src/presentation/features/auth/*"],
      "@dashboard/*": ["src/presentation/features/dashboard/*"],
      "@theme/*": ["src/presentation/features/theme/*"],
      "@charts/*": ["src/presentation/features/charts/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["next.config.mjs", "next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
