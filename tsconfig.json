{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@pages/*": ["pages/*"],
      "@mappers/*": ["src/application/mappers/*"],
      "@services/*": ["src/application/services/*"],
      "@entities/*": ["src/domain/entities/*"],
      "@interfaces/*": ["src/domain/interfaces/*"],
      "@mainTypes/*": ["src/domain/types/*"],
      "@api/*": ["src/infrastructure/api/*"],
      "@config/*": ["src/infrastructure/config/*"],
      "@redux/*": ["src/infrastructure/redux/*"],
      "@repositories/*": ["src/infrastructure/repositories/*"],
      "@components/*": ["src/presentation/components/*"],
      "@features/*": ["src/presentation/features/*"],
      "@layouts/*": ["src/presentation/layouts/*"],
      "@sharedHooks/*": ["src/shared/hooks/*"],
      "@sharedComponents/*": ["src/shared/components/*"],
      "@sharedTypes/*": ["src/shared/types/*"],
      "@constants/*": ["src/shared/constants/*"],
      "@context/*": ["src/shared/context/*"],
      "@utils/*": ["src/shared/utils/*"],
      "@icons/*": ["public/icons/*"],
      "@images/*": ["public/images/*"],
      "@svgs/*": ["public/svgs/*"],
      "@styles/*": ["styles/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["next.config.mjs", "next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
